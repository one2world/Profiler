<Window x:Class="Unity.MemoryProfiler.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unity.MemoryProfiler.UI"
        xmlns:controls="clr-namespace:Unity.MemoryProfiler.UI.Controls"
        xmlns:views="clr-namespace:Unity.MemoryProfiler.UI.Views"
        xmlns:converters="clr-namespace:Unity.MemoryProfiler.UI.Converters"
        mc:Ignorable="d"
        Title="Unity Memory Profiler" Height="800" Width="1200">
    <Window.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
        <converters:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="250" MaxWidth="500"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="350" MinWidth="250" MaxWidth="600"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧：快照管理面板 -->
        <views:SnapshotManagementPanel Grid.Column="0" 
                                       x:Name="SnapshotPanel"
                                       DataContext="{Binding SnapshotManagementViewModel}"/>

        <!-- 分隔器 -->
        <GridSplitter Grid.Column="1" 
                     Width="5" 
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Stretch"
                     Background="#E0E0E0"
                     ShowsPreview="False"/>

        <!-- 中间：主内容区域 -->
        <Grid Grid.Column="2">
            <!-- 标签页（全屏显示） -->
            <TabControl x:Name="MainTabControl" Background="White" BorderThickness="0" Padding="0">
            <TabItem Header="Summary">
                <views:SummaryView DataContext="{Binding SummaryViewModel}"/>
            </TabItem>
            <TabItem Header="Unity Objects">
                <views:UnityObjectsView DataContext="{Binding UnityObjectsViewModel}"/>
            </TabItem>
            <TabItem Header="All Of Memory">
                <views:AllTrackedMemoryView DataContext="{Binding AllTrackedMemoryViewModel}"/>
            </TabItem>
            <TabItem Header="Comparison" x:Name="ComparisonTab" Visibility="Collapsed">
                <views:ComparisonView x:Name="ComparisonViewControl" DataContext="{Binding ComparisonViewModel}"/>
            </TabItem>
        </TabControl>

        <!-- 加载进度覆盖层 -->
        <Border Background="#D0000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" Padding="40,30" CornerRadius="8" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    MinWidth="400" MaxWidth="600">
                <StackPanel>
                    <TextBlock Text="加载快照" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#333333" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="{Binding LoadingStatusText}" FontSize="14" 
                               Foreground="#666666" Margin="0,0,0,10" TextWrapping="Wrap"/>
                    
                    <ProgressBar Height="25" Value="{Binding LoadingProgress}" 
                                 Minimum="0" Maximum="100" Margin="0,0,0,10"/>
                    
                    <TextBlock FontSize="12" Foreground="#888888" 
                               HorizontalAlignment="Center">
                        <Run Text="{Binding LoadingProgress, StringFormat={}{0:F1}%}"/>
                        <Run Text=" - "/>
                        <Run Text="{Binding LoadingElapsedTime, StringFormat={}已用时: {0}}"/>
                    </TextBlock>
                    
                    <Button Content="取消" Padding="20,8" Margin="0,20,0,0" 
                            Background="#F44336" Foreground="White" BorderThickness="0" 
                            HorizontalAlignment="Center" Cursor="Hand"
                            Command="{Binding CancelLoadingCommand}"/>
                </StackPanel>
            </Border>
        </Border>
        </Grid>
        
        <!-- 分隔器 -->
        <GridSplitter Grid.Column="3" 
                     Width="5" 
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Stretch"
                     Background="#E0E0E0"
                     ShowsPreview="False"/>
        
        <!-- 右侧：详情面板 -->
        <Border Grid.Column="4"
                    x:Name="DetailsPanelBorder"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1,0,0,0"
                    Background="White">
            <controls:SelectionDetailsPanel x:Name="SelectionDetailsPanel"/>
        </Border>
        <!-- 结束右侧详情面板(通用) -->
    </Grid>
</Window>
