<UserControl x:Class="Unity.MemoryProfiler.UI.Views.ComparisonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:converters="clr-namespace:Unity.MemoryProfiler.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">
    <UserControl.Resources>
        <converters:CountDeltaToColorConverter x:Key="CountDeltaToColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏：快照A vs 快照B + 操作按钮 -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 快照信息 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Snapshot A: " FontWeight="Bold" Foreground="#F1F1F1" FontSize="13"/>
                    <TextBlock Text="{Binding SnapshotAName}" Foreground="#4EC9B0" FontSize="13" Margin="0,0,30,0"/>
                    <TextBlock Text="vs" Margin="0,0,30,0" Foreground="#DCDCDC" FontSize="13" FontWeight="Bold"/>
                    <TextBlock Text="Snapshot B: " FontWeight="Bold" Foreground="#F1F1F1" FontSize="13"/>
                    <TextBlock Text="{Binding SnapshotBName}" Foreground="#4EC9B0" FontSize="13"/>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox Content="Include Unchanged" 
                              IsChecked="{Binding IncludeUnchanged}"
                              Foreground="#F1F1F1"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Button Content="Expand All" 
                            Command="{Binding ExpandAllCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button Content="Collapse All" 
                            Command="{Binding CollapseAllCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    <Button Content="Refresh" 
                            Command="{Binding RefreshCommand}"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域：对比表格 + 详细表 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" MinHeight="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="150"/>
            </Grid.RowDefinitions>

            <!-- DevExpress TreeListControl对比表格 -->
            <dxg:TreeListControl Grid.Row="0" 
                                 x:Name="ComparisonTreeListControl"
                                 ItemsSource="{Binding Items}"
                                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                 SelectionMode="Row">
                <dxg:TreeListControl.View>
                    <dxg:TreeListView AllowEditing="False"
                                      AllowColumnFiltering="True"
                                      AllowSorting="True"
                                      ShowVerticalLines="False"
                                      ShowHorizontalLines="True"
                                      AutoWidth="True"
                                      NavigationStyle="Row"
                                      FadeSelectionOnLostFocus="False"/>
                </dxg:TreeListControl.View>

            <dxg:TreeListControl.Columns>
                <!-- Name列（树形） -->
                <dxg:TreeListColumn Header="Name" 
                                    FieldName="Name" 
                                    Width="350"
                                    AllowSorting="True">
                    <dxg:TreeListColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Row.Name}" 
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Row.Name}"/>
                        </DataTemplate>
                    </dxg:TreeListColumn.CellTemplate>
                </dxg:TreeListColumn>

                <!-- Size Delta列（彩色，带符号） -->
                <dxg:TreeListColumn Header="Size Delta" 
                                    FieldName="SizeDelta" 
                                    Width="150"
                                    AllowSorting="True"
                                    SortMode="Value">
                    <dxg:TreeListColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Row.SizeDeltaFormatted}" 
                                       Foreground="{Binding Row.DeltaColor}"
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"
                                       FontWeight="Bold"
                                       TextAlignment="Right"/>
                        </DataTemplate>
                    </dxg:TreeListColumn.CellTemplate>
                </dxg:TreeListColumn>

                <!-- Size in A列 -->
                <dxg:TreeListColumn Header="Size in A" 
                                    FieldName="TotalSizeInA" 
                                    Width="130"
                                    AllowSorting="True"
                                    SortMode="Value">
                    <dxg:TreeListColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Row.TotalSizeInAFormatted}" 
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"
                                       Foreground="#888888"
                                       TextAlignment="Right"/>
                        </DataTemplate>
                    </dxg:TreeListColumn.CellTemplate>
                </dxg:TreeListColumn>

                <!-- Size in B列 -->
                <dxg:TreeListColumn Header="Size in B" 
                                    FieldName="TotalSizeInB" 
                                    Width="130"
                                    AllowSorting="True"
                                    SortMode="Value">
                    <dxg:TreeListColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Row.TotalSizeInBFormatted}" 
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"
                                       Foreground="#888888"
                                       TextAlignment="Right"/>
                        </DataTemplate>
                    </dxg:TreeListColumn.CellTemplate>
                </dxg:TreeListColumn>

                <!-- Count Delta列 -->
                <dxg:TreeListColumn Header="Count Delta" 
                                    FieldName="CountDelta" 
                                    Width="120"
                                    AllowSorting="True"
                                    SortMode="Value">
                    <dxg:TreeListColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center"
                                       FontFamily="Consolas"
                                       TextAlignment="Right">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:+#;-#;0}">
                                        <Binding Path="Row.CountDelta"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                                <TextBlock.Foreground>
                                    <MultiBinding Converter="{StaticResource CountDeltaToColorConverter}">
                                        <Binding Path="Row.CountDelta"/>
                                    </MultiBinding>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </DataTemplate>
                    </dxg:TreeListColumn.CellTemplate>
                </dxg:TreeListColumn>

                <!-- Count in A列 -->
                <dxg:TreeListColumn Header="Count in A" 
                                    FieldName="CountInA" 
                                    Width="110"
                                    AllowSorting="True"
                                    SortMode="Value">
                    <dxg:TreeListColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Row.CountInA}" 
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"
                                       Foreground="#666666"
                                       TextAlignment="Right"/>
                        </DataTemplate>
                    </dxg:TreeListColumn.CellTemplate>
                </dxg:TreeListColumn>

                <!-- Count in B列 -->
                <dxg:TreeListColumn Header="Count in B" 
                                    FieldName="CountInB" 
                                    Width="110"
                                    AllowSorting="True"
                                    SortMode="Value">
                    <dxg:TreeListColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Row.CountInB}" 
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"
                                       Foreground="#666666"
                                       TextAlignment="Right"/>
                        </DataTemplate>
                    </dxg:TreeListColumn.CellTemplate>
                </dxg:TreeListColumn>
            </dxg:TreeListControl.Columns>
        </dxg:TreeListControl>

            <!-- GridSplitter -->
            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" 
                          Background="#3F3F46" ShowsPreview="False"/>

            <!-- Base/Compared详细表区域 -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Base (A) 详细表 -->
                <Border Grid.Row="0" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Base (A)" FontWeight="Bold" FontSize="14" Foreground="#F1F1F1" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding BaseDescriptionText}" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,10"/>
                        <TextBlock Text="选中主表项以查看详细对比数据" Foreground="#666666" FontStyle="Italic"/>
                        <!-- TODO: 在此嵌入AllTrackedMemoryView作为详细表 -->
                    </StackPanel>
                </Border>

                <!-- GridSplitter（垂直分隔Base和Compared） -->
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" 
                              Background="#3F3F46" ShowsPreview="False"/>

                <!-- Compared (B) 详细表 -->
                <Border Grid.Row="2" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Compared (B)" FontWeight="Bold" FontSize="14" Foreground="#F1F1F1" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding ComparedDescriptionText}" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,10"/>
                        <TextBlock Text="选中主表项以查看详细对比数据" Foreground="#666666" FontStyle="Italic"/>
                        <!-- TODO: 在此嵌入AllTrackedMemoryView作为详细表 -->
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 状态栏：总计统计 -->
        <Border Grid.Row="2" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Size A: " Foreground="#F1F1F1" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding TotalSizeAFormatted}" Foreground="#4EC9B0" FontWeight="Bold" Margin="0,0,30,0"/>
                
                <TextBlock Text="Total Size B: " Foreground="#F1F1F1" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding TotalSizeBFormatted}" Foreground="#4EC9B0" FontWeight="Bold" Margin="0,0,30,0"/>
                
                <TextBlock Text="Delta: " Foreground="#F1F1F1" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SizeDeltaFormatted}" Foreground="#FFC66D" FontWeight="Bold" Margin="0,0,50,0"/>
                
                <TextBlock Text="Snapshot Size A: " Foreground="#888888" FontSize="11"/>
                <TextBlock Text="{Binding TotalSnapshotSizeAFormatted}" Foreground="#AAAAAA" FontSize="11" Margin="0,0,20,0"/>
                
                <TextBlock Text="Snapshot Size B: " Foreground="#888888" FontSize="11"/>
                <TextBlock Text="{Binding TotalSnapshotSizeBFormatted}" Foreground="#AAAAAA" FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

