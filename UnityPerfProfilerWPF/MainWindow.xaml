<Window x:Class="UnityPerfProfilerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:UnityPerfProfilerWPF"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Unity Performance Profiler WPF"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="#FF1E1E1E">
    
    <!-- 深色主题资源 -->
    <Window.Resources>
        <!-- Value Converters -->
        <local:BoolToProfilingStatusConverter x:Key="BoolToProfilingStatusConverter"/>
        <local:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter"/>
        
        <Style x:Key="UPRPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="BorderBrush" Value="#FF3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style x:Key="UPRHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="UPRValueTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="UPRLabelTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF999999"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="UPRButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StopButtonStyle" TargetType="Button" BasedOn="{StaticResource UPRButtonStyle}">
            <Setter Property="Background" Value="#FFD13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFB02B2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF8B2225"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="FileButtonStyle" TargetType="Button" BasedOn="{StaticResource UPRButtonStyle}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource UPRButtonStyle}">
            <Setter Property="Background" Value="#FF6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5A6268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF495057"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部标题栏 -->
        <Border Grid.Row="0" Background="#FF252526" BorderBrush="#FF3E3E42" BorderThickness="0,0,0,1">
            <Grid Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 标题和版本信息 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <TextBlock Text="🔧" FontSize="16" Foreground="#FF007ACC" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Unity Performance Profiler" FontSize="16" FontWeight="Bold" Foreground="#FFEEEEEE" VerticalAlignment="Center"/>
                    <TextBlock Text="v1.0" FontSize="12" Foreground="#FF666666" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧信息面板 -->
            <Border Grid.Column="0" Style="{StaticResource UPRPanelStyle}" Margin="0,0,5,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="16">
                    
                    <!-- Unity Player信息区域 -->
                    <TextBlock Text="Unity Player Information" Style="{StaticResource UPRHeaderTextStyle}"/>
                    
                    <!-- 应用包名 -->
                    <TextBlock Text="Package Name" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding PackageName}" 
                               Style="{StaticResource UPRValueTextStyle}" 
                               FontSize="12" FontWeight="Normal"
                               Foreground="#FFEEEEEE"
                               TextWrapping="Wrap"
                               Margin="0,2,0,8"/>
                    
                    <!-- 应用名称 -->
                    <TextBlock Text="Application Name" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding GameName}" 
                               Style="{StaticResource UPRValueTextStyle}"
                               FontSize="14"
                               Margin="0,2,0,8"/>
                    
                    <!-- Unity版本 -->
                    <TextBlock Text="Unity Version" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding UnityVersion}" 
                               Style="{StaticResource UPRValueTextStyle}"
                               FontSize="14"
                               Margin="0,2,0,8"/>
                    
                    <!-- 平台信息 -->
                    <TextBlock Text="Platform" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding PlatformInfo}" 
                               Style="{StaticResource UPRValueTextStyle}"
                               FontSize="14"
                               Margin="0,2,0,16"/>
                    
                    <!-- 分隔线 -->
                    <Border Height="1" Background="#FF3E3E42" Margin="0,0,0,16"/>
                    
                    <!-- 连接设置区域 -->
                    <TextBlock Text="Connection Settings" Style="{StaticResource UPRHeaderTextStyle}"/>
                    
                    <!-- Unity Player IP -->
                    <TextBlock Text="Unity Player IP" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBox x:Name="IpAddressTextBox"
                             Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#FF3E3E42"
                             Foreground="#FFEEEEEE"
                             BorderBrush="#FF555555"
                             BorderThickness="1"
                             Padding="8,6"
                             FontSize="14"
                             Margin="0,5,0,8"/>
                    
                    <!-- 连接按钮 -->
                    <Button Content="{Binding ConnectButtonText}" 
                            Style="{StaticResource UPRButtonStyle}"
                            Command="{Binding ToggleConnectionCommand}"
                            Width="120"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,8"/>
                    
                    <!-- 连接状态 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Ellipse Width="8" Height="8" 
                                Fill="{Binding ConnectionStatusColor}" 
                                VerticalAlignment="Center" 
                                Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding ConnectionStatusText}" 
                                   Style="{StaticResource UPRLabelTextStyle}"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 分隔线 -->
                    <Border Height="1" Background="#FF3E3E42" Margin="0,0,0,16"/>
                    
                    <!-- Profiler控制区域 -->
                    <TextBlock Text="Profiler Controls" Style="{StaticResource UPRHeaderTextStyle}"/>
                    
                    <!-- Profiling Status -->
                    <TextBlock Text="Status" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding IsProfilingEnabled, Converter={StaticResource BoolToProfilingStatusConverter}}" 
                               Style="{StaticResource UPRValueTextStyle}"
                               FontSize="14"
                               Foreground="{Binding IsProfilingEnabled, Converter={StaticResource BoolToStatusColorConverter}}"
                               Margin="0,2,0,8"/>
                    
                    <!-- Start/Stop Profiling - 互斥按钮 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="▶ Start Profiler" 
                                Style="{StaticResource UPRButtonStyle}"
                                Command="{Binding StartProfilingCommand}"
                                IsEnabled="{Binding CanStartProfiling}"
                                FontSize="12"
                                Padding="12,6"
                                Margin="0,0,8,0"/>
                        
                        <Button Content="⏹ Stop Profiler" 
                                Style="{StaticResource StopButtonStyle}"
                                Command="{Binding StopProfilingCommand}"
                                IsEnabled="{Binding CanStopProfiling}"
                                FontSize="12"
                                Padding="12,6"/>
                    </StackPanel>
                    
                    <!-- 快照捕获区域 -->
                    <TextBlock Text="Capture Actions" Style="{StaticResource UPRLabelTextStyle}" Margin="0,8,0,8"/>
                    <WrapPanel Orientation="Horizontal">
                        <Button Content="📸 Memory" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding CaptureMemorySnapshotCommand}"
                                IsEnabled="{Binding IsConnected}"
                                FontSize="11"
                                Padding="8,4"
                                Margin="0,0,4,4"/>
                        <Button Content="🔍 Objects" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding CaptureObjectSnapshotCommand}"
                                IsEnabled="{Binding IsConnected}"
                                FontSize="11"
                                Padding="8,4"
                                Margin="0,0,4,4"/>
                    </WrapPanel>
                    
                    <!-- GC CallStack Toggle -->
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,16">
                        <CheckBox IsChecked="{Binding IsGCCallStackEnabled}" 
                                  Command="{Binding ToggleGCCallStackCommand}"
                                  IsEnabled="{Binding IsConnected}"
                                  Foreground="#FFCCCCCC" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="Enable GC CallStack" 
                                   Style="{StaticResource UPRLabelTextStyle}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 分隔线 -->
                    <Border Height="1" Background="#FF3E3E42" Margin="0,0,0,16"/>
                    
                    <!-- 文件管理区域 -->
                    <TextBlock Text="File Management" Style="{StaticResource UPRHeaderTextStyle}"/>
                    
                    <!-- 输出目录显示 -->
                    <TextBlock Text="Output Directory" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding OutputDirectory}" 
                               Style="{StaticResource UPRValueTextStyle}" 
                               FontSize="10" FontWeight="Normal"
                               Foreground="#FF999999"
                               TextWrapping="Wrap"
                               Margin="0,2,0,8"/>
                    
                    <!-- 文件操作按钮 -->
                    <StackPanel Orientation="Horizontal">
                        <Button Content="📁 Open Folder" 
                                Style="{StaticResource FileButtonStyle}"
                                Command="{Binding OpenOutputFolderCommand}"
                                Margin="0,0,4,0"/>
                        <Button Content="🗑 Clear Files" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding ClearOutputFilesCommand}"
                                FontSize="11"
                                Padding="8,4"/>
                    </StackPanel>
                    
                </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 中间图表区域 -->
            <Grid Grid.Column="1" Margin="5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 顶部连接状态区域 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Connection状态 -->
                    <Border Grid.Column="0" Style="{StaticResource UPRPanelStyle}" Margin="0,0,5,0" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Connection" Style="{StaticResource UPRHeaderTextStyle}"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <CheckBox IsChecked="{Binding IsConnected}" 
                                          Command="{Binding ToggleConnectionCommand}"
                                          Foreground="#FFCCCCCC" Margin="0,0,10,0"/>
                                <Rectangle Width="10" Height="10" Fill="#FF4CAF50" Margin="0,0,5,0"/>
                                <TextBlock Text="UPR Desktop" Foreground="#FFCCCCCC" Margin="0,0,10,0"/>
                                <Rectangle Width="10" Height="10" Fill="#FF4CAF50" Margin="0,0,5,0"/>
                                <Button Background="Transparent" BorderThickness="0" Padding="4">
                                    <TextBlock Text="☰" Foreground="#FFCCCCCC"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Buffer Status -->
                    <Border Grid.Column="1" Style="{StaticResource UPRPanelStyle}" Margin="5,0,0,0" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Buffer Status" Style="{StaticResource UPRHeaderTextStyle}"/>
                            <ProgressBar Value="{Binding BufferUsage}" 
                                        Height="20" 
                                        Maximum="100"
                                        Background="#FF3E3E42"
                                        Foreground="#FF4CAF50"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- 数据传输图表区域 -->
                <Border Grid.Row="1" Style="{StaticResource UPRPanelStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 图表标题和图例 -->
                        <Grid Grid.Row="0" Margin="16,16,16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Data Transfer" Style="{StaticResource UPRHeaderTextStyle}"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                    <Rectangle Width="12" Height="12" Fill="#FF4CAF50" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Sent to Server" Foreground="#FFCCCCCC" FontSize="12" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="12" Height="12" Fill="#FF2196F3" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Received from Player" Foreground="#FFCCCCCC" FontSize="12" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        
                        <!-- 图表占位符 -->
                        <lvc:CartesianChart Grid.Row="1" Name="ChartContainer" Margin="16"
                                          Series="{Binding ChartSeries}"
                                          XAxes="{Binding XAxes}"
                                          YAxes="{Binding YAxes}"
                                          DrawMargin="{Binding DrawMargin}"
                                          AnimationsSpeed="{Binding AnimationsSpeed}"
                                          EasingFunction="{Binding EasingFunction}">
                        </lvc:CartesianChart>
                        
                        <!-- 时间轴 -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="16">
                            <TextBlock Text="01:58" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="01:59" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="02:00" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="02:01" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="02:02" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="02:03" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="02:04" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="02:05" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="02:06" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                            <TextBlock Text="02:07" Foreground="#FF999999" FontSize="10" Margin="20,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- 右侧信息面板 -->
            <Border Grid.Column="2" Style="{StaticResource UPRPanelStyle}" Margin="5,0,0,0">
                <StackPanel Margin="16">
                    <TextBlock Text="Session Information" Style="{StaticResource UPRHeaderTextStyle}"/>
                    
                    <!-- Package Name -->
                    <TextBlock Text="Package Name" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding PackageName}" 
                               Style="{StaticResource UPRValueTextStyle}"
                               FontSize="12"
                               Margin="0,2,0,16"/>
                    
                    <!-- Screen Size -->
                    <TextBlock Text="Screen Resolution" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding ScreenSize}" 
                               Style="{StaticResource UPRValueTextStyle}"
                               FontSize="12"
                               Margin="0,2,0,16"/>
                    
                    <!-- Auto Capture Status -->
                    <TextBlock Text="Auto Capture" Style="{StaticResource UPRLabelTextStyle}"/>
                    <TextBlock Text="{Binding AutoCaptureStatus}" 
                               Style="{StaticResource UPRValueTextStyle}"
                               FontSize="12"
                               Margin="0,2,0,16"/>
                    
                    <!-- 分隔线 -->
                    <Border Height="1" Background="#FF3E3E42" Margin="0,0,0,16"/>
                    
                    <!-- Quick Actions -->
                    <TextBlock Text="Quick Actions" Style="{StaticResource UPRHeaderTextStyle}"/>
                    
                    <Button Content="🔄 Refresh Connection" 
                            Style="{StaticResource UPRButtonStyle}"
                            Command="{Binding ToggleConnectionCommand}"
                            IsEnabled="{Binding IsConnected}"
                            Margin="0,0,0,8"
                            FontSize="12"
                            Padding="8,4"/>
                    
                    <Button Content="📋 Export Session Data" 
                            Style="{StaticResource UPRButtonStyle}"
                            IsEnabled="{Binding IsConnected}"
                            Margin="0,0,0,8"
                            FontSize="12"
                            Padding="8,4"/>
                    
                    <Button Content="⚙ Settings" 
                            Style="{StaticResource UPRButtonStyle}"
                            Margin="0,0,0,16"
                            FontSize="12"
                            Padding="8,4"/>
                    
                    <!-- 分隔线 -->
                    <Border Height="1" Background="#FF3E3E42" Margin="0,0,0,16"/>
                    
                    <!-- Help -->
                    <TextBlock Text="Help &amp; Support" Style="{StaticResource UPRHeaderTextStyle}"/>
                    
                    <Button Content="📖 Documentation" 
                            Style="{StaticResource UPRButtonStyle}"
                            Margin="0,0,0,8"
                            FontSize="12"
                            Padding="8,4"/>
                    
                    <Button Content="🐛 Report Issue" 
                            Style="{StaticResource UPRButtonStyle}"
                            Margin="0,0,0,8"
                            FontSize="12"
                            Padding="8,4"/>
                    
                </StackPanel>
            </Border>
        </Grid>

        <!-- 底部工具栏 -->
        <Border Grid.Row="2" Background="#FF252526" BorderBrush="#FF3E3E42" BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧捕获按钮 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="⊕ Add Tag" 
                            Style="{StaticResource UPRButtonStyle}" 
                            Command="{Binding AddTagCommand}"
                            IsEnabled="{Binding IsConnected}"/>
                    <Button Content="📷 Capture Objects" 
                            Style="{StaticResource UPRButtonStyle}" 
                            Command="{Binding CaptureObjectsCommand}"
                            IsEnabled="{Binding IsConnected}"/>
                    <Button Content="💾 Capture Memory" 
                            Style="{StaticResource UPRButtonStyle}" 
                            Command="{Binding CaptureMemoryCommand}"
                            IsEnabled="{Binding IsConnected}"/>
                    <Button Content="📊 RenderDoc Capture" 
                            Style="{StaticResource UPRButtonStyle}" 
                            Command="{Binding OpenRenderDocCommand}"
                            IsEnabled="{Binding IsConnected}"/>
                </StackPanel>
                
                <!-- 右侧状态信息 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Connection Status:" 
                               Style="{StaticResource UPRLabelTextStyle}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding ConnectionStatusText}" 
                               Style="{StaticResource UPRValueTextStyle}"
                               FontSize="14"
                               Foreground="{Binding ConnectionStatusColor}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
