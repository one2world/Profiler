<UserControl x:Class="Unity.MemoryProfiler.UI.Views.SnapshotManagementPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:Unity.MemoryProfiler.UI.Converters"
             xmlns:local="clr-namespace:Unity.MemoryProfiler.UI.Models"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="320">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Tabåˆ‡æ¢ -->
            <RowDefinition Height="Auto"/> <!-- å·²åŠ è½½å¿«ç…§å¡ç‰‡ -->
            <RowDefinition Height="*"/>    <!-- å¿«ç…§åˆ—è¡¨ -->
        </Grid.RowDefinitions>

        <!-- Tabåˆ‡æ¢ï¼ˆSingle Snapshot / Compare Snapshotsï¼‰ -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Single Snapshot Tab -->
                <Button Grid.Column="0" Content="Single Snapshot" 
                        Command="{Binding SwitchToSingleModeCommand}"
                        Padding="10,8" BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#666"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CompareMode}" Value="False">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Compare Snapshots Tab -->
                <Button Grid.Column="1" Content="Compare Snapshots"
                        Command="{Binding SwitchToCompareModeCommand}"
                        Padding="10,8" BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#666"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CompareMode}" Value="True">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- åˆ·æ–°æŒ‰é’® -->
                <Button Grid.Column="2" Content="ðŸ”„" Command="{Binding RefreshSnapshotsCommand}" 
                        Padding="10,8" Background="Transparent" BorderThickness="0"
                        ToolTip="åˆ·æ–°å¿«ç…§åˆ—è¡¨" Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- å·²åŠ è½½å¿«ç…§å¡ç‰‡åŒºåŸŸ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="400">
            <StackPanel>
                <!-- Single Snapshotæ¨¡å¼ï¼šæ˜¾ç¤ºå½“å‰æ‰“å¼€çš„å¿«ç…§ -->
                <Border Background="#F8F9FA" Padding="10" Margin="0,0,0,1"
                        Visibility="{Binding ShowSingleSnapshotCard, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- é¢„è§ˆå›¾ -->
                        <Border Grid.Row="0" Background="#E0E0E0" Height="100" Margin="0,0,0,8">
                            <TextBlock Text="ðŸ“¸" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                        </Border>
                        
                        <!-- å¿«ç…§ä¿¡æ¯ -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,8">
                            <TextBlock Text="{Binding BaseSnapshot.Name}" FontWeight="Bold" FontSize="13" 
                                       TextWrapping="Wrap" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding BaseSnapshot.DateFormatted}" FontSize="11" Foreground="#666" Margin="0,0,0,2"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="Total Resident: " FontSize="10" Foreground="#666"/>
                                <TextBlock Text="{Binding BaseSnapshot.SizeFormatted}" FontSize="10" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- CloseæŒ‰é’® -->
                        <Button Grid.Row="2" Content="Close" Command="{Binding CloseBaseSnapshotCommand}"
                                Padding="10,5" Background="#F44336" Foreground="White" 
                                BorderThickness="0" Cursor="Hand"/>
                    </Grid>
                </Border>

                <!-- Compare Snapshotsæ¨¡å¼ï¼šæ˜¾ç¤ºAå’ŒBä¸¤ä¸ªå¿«ç…§å¡ç‰‡ -->
                <StackPanel Visibility="{Binding ShowCompareSnapshotCards, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- Snapshot Aå¡ç‰‡ -->
                    <Border Background="#E3F2FD" Padding="10" Margin="0,0,0,1"
                            Visibility="{Binding BaseSnapshot, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Aæ ‡ç­¾ + é¢„è§ˆå›¾ -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Border Background="#E0E0E0" Height="100">
                                    <TextBlock Text="ðŸ“¸" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                                </Border>
                                <Border Background="#2196F3" CornerRadius="12" Padding="8,4" 
                                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8">
                                    <TextBlock Text="A" Foreground="White" FontWeight="Bold" FontSize="11"/>
                                </Border>
                            </Grid>
                            
                            <!-- å¿«ç…§ä¿¡æ¯ -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,8">
                                <TextBlock Text="{Binding BaseSnapshot.Name}" FontWeight="Bold" FontSize="13" 
                                           TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding BaseSnapshot.DateFormatted}" FontSize="11" Foreground="#666" Margin="0,0,0,2"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="Total Resident: " FontSize="10" Foreground="#666"/>
                                    <TextBlock Text="{Binding BaseSnapshot.SizeFormatted}" FontSize="10" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- CloseæŒ‰é’® -->
                            <Button Grid.Row="2" Content="Close" Command="{Binding CloseBaseSnapshotCommand}"
                                    Padding="10,5" Background="#2196F3" Foreground="White" 
                                    BorderThickness="0" Cursor="Hand"/>
                        </Grid>
                    </Border>

                    <!-- Snapshot Bå¡ç‰‡ -->
                    <Border Background="#FFF3E0" Padding="10" Margin="0,0,0,1"
                            Visibility="{Binding ComparedSnapshot, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Bæ ‡ç­¾ + é¢„è§ˆå›¾ -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Border Background="#E0E0E0" Height="100">
                                    <TextBlock Text="ðŸ“¸" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                                </Border>
                                <Border Background="#FF9800" CornerRadius="12" Padding="8,4" 
                                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8">
                                    <TextBlock Text="B" Foreground="White" FontWeight="Bold" FontSize="11"/>
                                </Border>
                            </Grid>
                            
                            <!-- å¿«ç…§ä¿¡æ¯ -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,8">
                                <TextBlock Text="{Binding ComparedSnapshot.Name}" FontWeight="Bold" FontSize="13" 
                                           TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding ComparedSnapshot.DateFormatted}" FontSize="11" Foreground="#666" Margin="0,0,0,2"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="Total Resident: " FontSize="10" Foreground="#666"/>
                                    <TextBlock Text="{Binding ComparedSnapshot.SizeFormatted}" FontSize="10" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- CloseæŒ‰é’® -->
                            <Button Grid.Row="2" Content="Close" Command="{Binding CloseComparedSnapshotCommand}"
                                    Padding="10,5" Background="#FF9800" Foreground="White" 
                                    BorderThickness="0" Cursor="Hand"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- å¿«ç…§åˆ—è¡¨ -->
        <Border Grid.Row="2" Background="White">
            <Grid>
                <!-- æœ‰å¿«ç…§æ—¶æ˜¾ç¤ºåˆ—è¡¨ -->
                <!-- ä½¿ç”¨ListBoxä»£æ›¿TreeListControlï¼Œæ›´çµæ´» -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Visibility="{Binding HasSnapshots, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding SnapshotTree}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}" 
                                         Margin="0,0,0,5" Background="#FAFAFA">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <TextBlock Text="ðŸ“" Margin="0,0,8,0" FontSize="14"/>
                                            <TextBlock Text="{Binding SessionName}" FontWeight="SemiBold" FontSize="13"/>
                                            <TextBlock Text="{Binding Count, StringFormat=' ({0})'}" 
                                                       Foreground="#666" Margin="5,0,0,0" FontSize="12"/>
                                        </StackPanel>
                                    </Expander.Header>
                                    
                                    <ItemsControl ItemsSource="{Binding Snapshots}" Margin="10,5,0,5">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                                                       Padding="10,8" Margin="0,0,0,2" Cursor="Hand"
                                                       MouseLeftButtonDown="Snapshot_MouseLeftButtonDown">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- A/Bæ ‡ç­¾ -->
                                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                                                            <Border Background="#2196F3" CornerRadius="2" Padding="5,2" Margin="0,0,3,0"
                                                                    Visibility="{Binding IsBase, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBlock Text="A" Foreground="White" FontWeight="Bold" FontSize="9"/>
                                                            </Border>
                                                            <Border Background="#FF9800" CornerRadius="2" Padding="5,2"
                                                                    Visibility="{Binding IsCompared, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBlock Text="B" Foreground="White" FontWeight="Bold" FontSize="9"/>
                                                            </Border>
                                                        </StackPanel>
                                                        
                                                        <!-- å¿«ç…§ä¿¡æ¯ -->
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}" FontWeight="Medium" 
                                                                       TextTrimming="CharacterEllipsis"
                                                                       ToolTip="{Binding FullPath}"/>
                                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                                <TextBlock Text="{Binding DateFormatted}" FontSize="10" Foreground="#999"/>
                                                                <TextBlock Text=" â€¢ " FontSize="10" Foreground="#CCC" Margin="3,0"/>
                                                                <TextBlock Text="{Binding SizeFormatted}" FontSize="10" Foreground="#999"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- æ— å¿«ç…§æ—¶æ˜¾ç¤ºæç¤º -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSnapshots}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="ðŸ“‚" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="No snapshots found" FontSize="14" Foreground="#999" 
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="Capture snapshots in Unity Editor" FontSize="11" Foreground="#BBB" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

