<UserControl x:Class="Unity.MemoryProfiler.UI.Controls.PathsToRootView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unity.MemoryProfiler.UI.Controls"
             xmlns:models="clr-namespace:Unity.MemoryProfiler.UI.Models"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- TreeViewItem样式 -->
        <Style x:Key="PathsToRootTreeItemStyle" TargetType="{x:Type TreeViewItem}">
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- 循环引用警告图标样式 -->
        <Style x:Key="CircularRefIconStyle" TargetType="{x:Type Image}">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="ToolTip" Value="This is a circular reference, click to highlight original"/>
        </Style>

        <!-- Ribbon按钮样式 -->
        <Style x:Key="RibbonButtonStyle" TargetType="{x:Type RadioButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1,1,1,0" 
                                Padding="15,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1,1,1,2"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5E5E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ribbon标签页 (模式切换) -->
        <Border Grid.Row="0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Background="#F5F5F5">
            <StackPanel Orientation="Horizontal" Margin="10,5,10,0">
                <RadioButton x:Name="ReferencedByButton" 
                             Content="Referenced By (0)" 
                             Style="{StaticResource RibbonButtonStyle}"
                             IsChecked="True"
                             Checked="RibbonButton_Checked"
                             Tag="ReferencedBy"/>
                <RadioButton x:Name="ReferencesToButton" 
                             Content="References To (0)" 
                             Style="{StaticResource RibbonButtonStyle}"
                             Checked="RibbonButton_Checked"
                             Tag="ReferencesTo"
                             Margin="2,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <!-- DevExpress TreeListControl -->
            <dxg:TreeListControl x:Name="PathsTreeList"
                                 ShowBorder="True"
                                 SelectionMode="Row">
                <dxg:TreeListControl.View>
                    <dxg:TreeListView AutoWidth="True"
                                      NavigationStyle="Row"
                                      AllowEditing="False"
                                      ShowIndicator="False"
                                      TreeDerivationMode="ChildNodesSelector"
                                      ChildNodesPath="Children"
                                      ShowVerticalLines="False"
                                      ShowHorizontalLines="True"
                                      AllowPerPixelScrolling="True"
                                      AllowCascadeUpdate="True"
                                      AllowSorting="False"
                                      FocusedRowChanged="OnFocusedRowChanged"/>
                </dxg:TreeListControl.View>
                
                <dxg:TreeListControl.Columns>
                    <!-- Display Name列 - 包含循环引用图标、类型图标和显示名称 -->
                    <dxg:TreeListColumn Header="Display Name" 
                                        FieldName="DisplayName" 
                                        Width="350">
                        <dxg:TreeListColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- 循环引用警告图标 -->
                                    <Image Width="16" Height="16" 
                                           Margin="0,0,5,0"
                                           Visibility="{Binding Row.CircularRefIconVisibility}"
                                           ToolTip="This is a circular reference, click to highlight original"
                                           MouseLeftButtonDown="CircularRefIcon_Click">
                                        <Image.Source>
                                            <DrawingImage>
                                                <DrawingImage.Drawing>
                                                    <DrawingGroup>
                                                        <GeometryDrawing Brush="#FFA500">
                                                            <GeometryDrawing.Geometry>
                                                                <EllipseGeometry Center="8,8" RadiusX="7" RadiusY="7"/>
                                                            </GeometryDrawing.Geometry>
                                                        </GeometryDrawing>
                                                        <GeometryDrawing Brush="White">
                                                            <GeometryDrawing.Geometry>
                                                                <PathGeometry Figures="M 8,4 L 8,10 M 8,11 L 8,12"/>
                                                            </GeometryDrawing.Geometry>
                                                            <GeometryDrawing.Pen>
                                                                <Pen Brush="White" Thickness="1.5"/>
                                                            </GeometryDrawing.Pen>
                                                        </GeometryDrawing>
                                                    </DrawingGroup>
                                                </DrawingImage.Drawing>
                                            </DrawingImage>
                                        </Image.Source>
                                    </Image>
                                    
                                    <!-- GC Root 标记图标 -->
                                    <Image Width="16" Height="16" 
                                           Margin="0,0,5,0"
                                           ToolTip="GC Root - This object is not referenced by any other managed object">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Row.IsGCRoot}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                        <Image.Source>
                                            <DrawingImage>
                                                <DrawingImage.Drawing>
                                                    <DrawingGroup>
                                                        <!-- 绿色圆圈背景 -->
                                                        <GeometryDrawing Brush="#28A745">
                                                            <GeometryDrawing.Geometry>
                                                                <EllipseGeometry Center="8,8" RadiusX="7" RadiusY="7"/>
                                                            </GeometryDrawing.Geometry>
                                                        </GeometryDrawing>
                                                        <!-- 白色勾号 -->
                                                        <GeometryDrawing Brush="White">
                                                            <GeometryDrawing.Geometry>
                                                                <PathGeometry Figures="M 4,8 L 7,11 L 12,5"/>
                                                            </GeometryDrawing.Geometry>
                                                            <GeometryDrawing.Pen>
                                                                <Pen Brush="White" Thickness="1.5" LineJoin="Round" StartLineCap="Round" EndLineCap="Round"/>
                                                            </GeometryDrawing.Pen>
                                                        </GeometryDrawing>
                                                    </DrawingGroup>
                                                </DrawingImage.Drawing>
                                            </DrawingImage>
                                        </Image.Source>
                                    </Image>
                                    
                                    <!-- 类型图标 -->
                                    <Image Width="16" Height="16" 
                                           Margin="0,0,5,0"
                                           Source="{Binding Row.TypeIconSource}"
                                           ToolTip="{Binding Row.TypeIconTooltip}"/>
                                    
                                    <!-- 显示名称 -->
                                    <TextBlock Text="{Binding Row.DisplayName}" 
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding Row.FullTooltip}"/>
                                    
                                    <!-- Flags图标 -->
                                    <Image Width="16" Height="16" 
                                           Margin="5,0,0,0"
                                           Source="{Binding Row.FlagsIconSource}"
                                           ToolTip="{Binding Row.FlagsTooltip}"
                                           Visibility="{Binding Row.FlagsIconVisibility}"/>
                                </StackPanel>
                            </DataTemplate>
                        </dxg:TreeListColumn.CellTemplate>
                    </dxg:TreeListColumn>

                    <!-- Type 列 -->
                    <dxg:TreeListColumn Header="Type" 
                                        FieldName="TruncatedTypeName" 
                                        Width="250">
                        <dxg:TreeListColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Row.TruncatedTypeName}" 
                                           VerticalAlignment="Center"
                                           FontFamily="Consolas"
                                           Foreground="#666666"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding Row.TypeName}"/>
                            </DataTemplate>
                        </dxg:TreeListColumn.CellTemplate>
                    </dxg:TreeListColumn>

                    <!-- Address 列 -->
                    <dxg:TreeListColumn Header="Address" 
                                        FieldName="Address" 
                                        Width="150">
                        <dxg:TreeListColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Row.Address}" 
                                           VerticalAlignment="Center"
                                           FontFamily="Consolas"
                                           Foreground="#0066CC"
                                           TextAlignment="Right"/>
                            </DataTemplate>
                        </dxg:TreeListColumn.CellTemplate>
                    </dxg:TreeListColumn>
                </dxg:TreeListControl.Columns>
            </dxg:TreeListControl>

            <!-- 无选择提示 -->
            <TextBlock x:Name="NoSelectionMessage" 
                       Text="No Object Selected" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="Gray"
                       Visibility="Collapsed"/>

            <!-- 无引用提示 -->
            <TextBlock x:Name="NoReferencesMessage" 
                       Text="Selection has no references" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="Gray"
                       Visibility="Collapsed"/>

            <!-- 搜索中加载指示器 -->
            <Border x:Name="LoadingOverlay" 
                    Background="#80000000" 
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <ProgressBar x:Name="SearchProgressBar" 
                                 Width="200" Height="20" 
                                 IsIndeterminate="True"/>
                    <TextBlock x:Name="LoadingMessage" 
                               Text="Searching references..." 
                               Foreground="White" 
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

